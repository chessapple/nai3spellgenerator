<UserControl x:Class="SpellGenerator.LoraLayerSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpellGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="40">
    <StackPanel Orientation="Vertical" Width="40">
        <Label x:Name="TextValue" Content ="0.7" HorizontalAlignment="Center"/>
        <Slider x:Name="SliderValue" ValueChanged="SliderValue_ValueChanged" HorizontalAlignment="Center"   VerticalAlignment="Top"   Orientation="Vertical" Height="350" Minimum="0" Maximum="1" TickFrequency="0.1" />
        <TextBlock x:Name="TextLabel" Text ="66" HorizontalAlignment="Center" TextAlignment="Center" />
    </StackPanel>
</UserControl>
