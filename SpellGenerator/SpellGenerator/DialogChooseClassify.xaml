<Window x:Class="SpellGenerator.DialogChooseClassify"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpellGenerator"
        mc:Ignorable="d" FontSize="{DynamicResource FontSizeNormal}"
        Style="{DynamicResource CustomToolWindowStyle}"
        Title="选择分组" Height="173" Width="350"  ResizeMode="NoResize" WindowStartupLocation="CenterOwner" >
    <Grid Margin="0,0,0,0">
        <Label Content="请选择合适的分组，分组将在自动分组时作为排序依据" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxClassify" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="298"/>
        <Button x:Name="ButtonOK" Click="ButtonOK_Click" Content="确定" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
