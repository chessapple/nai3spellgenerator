<Window x:Class="SpellGenerator.DialogChooseTag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpellGenerator"
        mc:Ignorable="d" FontSize="{DynamicResource FontSizeNormal}"
        Style="{DynamicResource CustomToolWindowStyle}"
        Title="请选择要生成预览的Tag" Height="200" Width="350"  ResizeMode="NoResize" WindowStartupLocation="CenterOwner" >
    <Grid Margin="0,0,0,0">
        <Label Content="Tag" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxTag" DisplayMemberPath="pureinfo"  HorizontalAlignment="Left" Margin="84,14,0,0" VerticalAlignment="Top" Width="245"/>
        <Label Content="保存到" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxPack" DisplayMemberPath="name"  HorizontalAlignment="Left" Margin="84,54,0,0" VerticalAlignment="Top" Width="245"/>
        <Button x:Name="ButtonOK" Click="ButtonOK_Click" Content="确定" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckRecordPreview" Content="下次选择同一个保存位置" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
